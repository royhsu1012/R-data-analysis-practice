<form method="POST" id="update_task">
    <div class="form-group">
        <label for="task_date" class="text-light">Date</label>
        <input type="date" name="date" value="">
    </div>
    <div class="new_task">
        <div class="form-group">
            <label for="name" class="text-light">Task</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="task" value="" placeholder="task title">
        </div>
    </div>
    
    <div class="form-group">
        <label for="description" class="text-light">Description</label>
        <input type="text" name="description" value="" placeholder="your task detail">
    </div>
    
    <div class="form-group">
        <label for="emergency" class="text-light">Emergency</label>
        <div class="emergency list">
            <input list="browsers" name="emergency" placeholder="choose one">
            <datalist id="browsers">
                <option value="1">
                <option value="2">
                <option value="3">
                <option value="4">
                <option value="5">
            </datalist>
        </div>
    </div>

    <div class="form-group">
        <label for="status" class="text-light">Status</label>
        <div class="radio inline">
            <input type="radio" id="radio-1" name="status" value="1">
            <label for="radio-1" class="radio-label">Not yet</label>
        </div>
        <div class="radio inline">
            <input type="radio" id="radio-2" name="status" value="2">
            <label for="radio-2" class="radio-label">In progress</label>
        </div>
        <div class="radio inline">
            <input type="radio" id="radio-3" name="status" value="3">
            <label for="radio-3" class="radio-label">Finished</label>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn text-dark update">Save</button>
    </div>

</form>